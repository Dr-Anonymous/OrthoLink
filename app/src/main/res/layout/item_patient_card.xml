<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#1E1E1E"
    android:layout_marginEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <TextView
            android:id="@+id/tvCardPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <!-- Vitals -->
        <LinearLayout
            android:id="@+id/layoutVitals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#333333"
            android:padding="8dp"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_stethoscope"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#2196F3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vitals"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="2dp"/>
                <TextView
                    android:id="@+id/tvVitals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#E0E0E0"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Referred By -->
        <LinearLayout
            android:id="@+id/layoutReferredBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referred By"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvReferredBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Personal Note -->
        <LinearLayout
            android:id="@+id/layoutPersonalNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor's Personal Note"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvPersonalNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Complaints -->
        <LinearLayout
            android:id="@+id/layoutComplaints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_stethoscope"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaints"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvComplaints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Findings -->
        <LinearLayout
            android:id="@+id/layoutFindings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clinical Findings"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvFindings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Investigations -->
        <LinearLayout
            android:id="@+id/layoutInvestigations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investigations"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvInvestigations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Diagnosis -->
        <LinearLayout
            android:id="@+id/layoutDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_stethoscope"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnosis"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvDiagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Medications -->
        <LinearLayout
            android:id="@+id/layoutMedications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pill"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medications"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvMedications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Procedure -->
        <LinearLayout
            android:id="@+id/layoutProcedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file" 
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procedure Done"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvProcedure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Advice -->
        <LinearLayout
            android:id="@+id/layoutAdvice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advice"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvAdvice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Follow-up -->
        <LinearLayout
            android:id="@+id/layoutFollowUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow-up"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvFollowUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Referred To -->
        <LinearLayout
            android:id="@+id/layoutReferredTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file" 
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:tint="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referred To"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"/>
                <TextView
                    android:id="@+id/tvReferredTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
