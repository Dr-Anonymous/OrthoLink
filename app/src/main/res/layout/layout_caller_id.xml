<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#121212"
        android:padding="16dp">

        <!-- Header: Caller Info -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCallerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1E1E1E"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:id="@+id/tvCallerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCallerNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown Number"
                    android:textSize="14sp"
                    android:textColor="#B0BEC5" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/scrollViewDetails"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPatientInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching patient details..."
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <HorizontalScrollView
                    android:id="@+id/hsvPatients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/layoutPatientsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="16dp"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <!-- Calendar Events -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCalendarEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#1E1E1E"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/layoutCalendarEvents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_calendar"
                                android:layout_marginEnd="12dp"
                                app:tint="#FFFFFF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calendar Event"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        
                        <TextView
                            android:id="@+id/tvCalendarEventDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvCalendarEventDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#616161"
                            android:layout_marginStart="32dp"/>

                        <TextView
                            android:id="@+id/tvCalendarEventAttachment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Attachment"
                            android:textSize="13sp"
                            android:textColor="#2196F3"
                            android:textStyle="bold"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="4dp"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/layoutAttachmentPreview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="8dp">
                            
                            <Button
                                android:id="@+id/btnCloseAttachment"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="Close Preview"
                                android:textSize="10sp"
                                android:backgroundTint="#757575"
                                android:layout_gravity="end"/>

                            <WebView
                                android:id="@+id/wvAttachment"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="#F5F5F5"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/layoutCallControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReceiveCall"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:text="Answer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="32dp"
                    app:icon="@drawable/ic_phone_call"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="16dp"/>
                
                 <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecline"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:backgroundTint="#F44336"
                    app:cornerRadius="32dp"
                    app:icon="@drawable/ic_close"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="16dp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMinimize"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:backgroundTint="#333333"
                    app:strokeColor="#555555"
                    app:strokeWidth="1dp"
                    app:cornerRadius="32dp"
                    app:icon="@drawable/ic_minimize"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutWhatsAppControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                 <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Open WhatsApp"
                    android:textSize="14sp"
                    app:backgroundTint="#25D366"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_message_circle" 
                    app:iconGravity="textStart"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLocationButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClinic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clinic"
                    android:textSize="12sp"
                    app:backgroundTint="#607D8B"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLaxmi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laxmi"
                    android:textSize="12sp"
                    app:backgroundTint="#607D8B"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBadam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Badam"
                    android:textSize="12sp"
                    app:backgroundTint="#607D8B"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Minimized / Restore Button -->
    <ImageButton
        android:id="@+id/btnRestore"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/ic_map_pin"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:visibility="gone"
        android:contentDescription="Restore Overlay" />

</FrameLayout>
